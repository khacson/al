<input type="hidden" name="id" id="id"/>
<script type="text/javascript">
    var func = "@Url.Action("getList")";
    var cpage = 0;
    var search = null;
    $(function () {
        getListSearch(func);
        $("#search").click(function () {
            getListSearch(func);
        });
        $("#refresh").click(function () {
            refresh();
        });
        $("#save").click(function () {
