        toastr.warning('<div class="txtconfirmDelete">' + cf + '</div><div class="text-center"><button type="button" onclick="okDelete(' + id + ');" id="okdelete" class="btn btn-danger">' + deletes + '</button><button type="button" id="surpriseBtn" class="btn" style="margin: 0 8px 0 8px">' + cancel + '</button></div>')
    }
    function okDelete(id) {
        var idList = getCheckedId();
        //var id = $('#id').val();
        var deletes = "@Url.Action("deletes")";
        $.ajax({
            url: deletes,
            async: true,
            type: 'POST',
            dataType: 'JSON',
            data: { id: id },
            success: function (obj) {
                getListSearch(func);
            }
        });
    }
    function save() {
        var search = getSearch();
        var objectSearch = JSON.parse(search);
        if (objectSearch.username == "") {
            warning("User name can not be empty"); return false;
        }
        if (objectSearch.password == "") {
            warning("Password can not be empty"); return false;
        }
        if (objectSearch.password != objectSearch.cfpassword) {
            warning("Confirm password is incorect"); return false;
        }
        if (objectSearch.groupid == "") {
            warning("Select a group"); return false;
        }
        var save = "@Url.Action("save")";
        var data = new FormData();
        var objectfile = document.getElementById('profileAvatar').files;
        data.append('avatarfile', objectfile[0]);
        data.append('search', search);
        $(".loading").show();
        $.ajax({
            url: save,
            async: true,
            type: 'POST',
            dataType: 'JSON',
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            data: data,
            success: function (obj) {
                $(".loading").hide();
                if (obj.status == 1) {
                    success("Add successfully");
                    getListSearch(func);
                }
                else {
                    error("Add Failed");
                }
            }
        });
    }
    function edit() {
        var id = $('#id').val();
        var search = getSearch();
        var objectSearch = JSON.parse(search);
        if (id == "") {
            warning("Select a item"); return false;
        }
        if (objectSearch.username == "") {
            warning("User name can not be empty"); return false;
        }
        if (objectSearch.password != "") {
            if (objectSearch.password != objectSearch.cfpassword) {
                warning("Confirm password is incorect"); return false;
            }
        }
        if (objectSearch.groupid == "") {
            warning("Select a group"); return false;
        }
        var save = "@Url.Action("edits")";
        var data = new FormData();
        var objectfile = document.getElementById('profileAvatar').files; 
        data.append('avatarfile', objectfile[0]);
        data.append('search', search);
        data.append('id', id);
        $(".loading").show();
        $.ajax({
            url: save,
            async: true,
            type: 'POST',
            dataType: 'JSON',
            data: data,
            enctype: 'multipart/form-data',
            processData: false,
            contentType: false,
            success: function (obj) {
                $(".loading").hide();
                if (obj.status == 1) {
                    success("Edit successfully");
                    getListSearch(func);
                }
                else {
                    error("Edit Failed");
                }
            }
        });
    }
    function getListSearch(func) {
        $(".loading").show();
        $.ajax({
            url:  func,
            async: true,
            type: 'POST',
            dataType: 'JSON',
            data: { page: cpage, search: search, order: order, index: index },
            success: function (obj) {
                $(".loading").hide();
                $('#totals').html(obj.total);
                $('#grid-rows').html(obj.content);
                if (typeof (funcList) == 'function') {
                    funcList(obj);
                }
            }
        });
    }
    function funcList(obj) {
        $(".edit").each(function (e) {
            $(this).click(function () {
                var id = $(this).attr("id");
                var isactive = $(this).attr("isactive");
                var groupid = $(this).attr("groupid");
                var username = $('.username').eq(e).html();
                var fullname = $('.fullname').eq(e).html();
                var email = $('.email').eq(e).html();
                var phone = $('.phone').eq(e).html();
                //Set data
                $('#isactive').multipleSelect('setSelects', isactive.split(','));
                $('#groupid').multipleSelect('setSelects', groupid.split(','));
                
                $('#password,#cfpassword').val('');
                $('#id').val(id);
                $('#username').val(username.trim());
                $('#fullname').val(fullname.trim());
                $('#email').val(email.trim());
                $('#phone').val(phone.trim());

            });
        });
    }
    function refresh() {
        $(".searchs").val("");
        $("selct.combos").multipleSelect("uncheckAll");
    }
    function init() {
        $("#groupid").multipleSelect({
            filter: true,
            placeholder: 'Select a group',
            single: true
        });
        $("#isactive").multipleSelect({
            filter: true,
            placeholder: 'Select a status',
            single: true
        });
        $('#profileAvatar').change(function (evt) {
            var files = evt.target.files;
            for (var i = 0, f; f = files[i]; i++) {
                var size = f.size;
                if (size < 2048000) {
                    if (!f.type.match('image.*')) {
                        continue;
                    }
                    var reader = new FileReader();
                    reader.onload = (function (theFile) {
                        return function (e) { //size e = e.tatal
                            $('#showavatar').html('<img src="' + e.target.result + '" style="width:60px; height:40px" />');
                            $("#img1").val(e.target.result);
                        };
                    })(f);
                    reader.readAsDataURL(f);
                }
                else {
                    $("#fileupload").val("");
                    $('.showImages').attr('src', "");
                    // alert("File size can't over 2Mb.");
                    toastr.error("File size can't over 2Mb.", messageError, { closeButton: true, timeOut: 5000 });
                }
            }
        });
        $(".searchs").val("");
        $("selct.combos").multipleSelect("uncheckAll");
    }
</script>