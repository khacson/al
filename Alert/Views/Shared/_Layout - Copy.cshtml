<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    @Styles.Render("~/Scripts/plugins/bootstrap/css/bootstrap.min.css")
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    @Styles.Render("~/Content/dist/css/AdminLTE.css")
    @Styles.Render("~/Content/dist/css/skins/_all-skins.min.css")
    <!-- jQuery 2.2.3 -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.2.3.min.js")"></script>
</head>
<!-- ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR. -->
<body class="hold-transition skin-blue layout-top-nav">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <div class="container">
                    @Html.Partial("_Menu")
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Full Width Column -->
        <div class="content-wrapper">
            <div class="container">
                @RenderBody()
            </div>
            <!-- /.container -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <!--<b>Version</b> 2.3.7-->
                </div>
                <strong>Copyright &copy; @DateTime.Now.Year  <a href="#">Son Nguyen</a>.</strong> All rights
                reserved.
            </div>
            <!-- /.container -->
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- Bootstrap 3.3.6 -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/bootstrap/js/bootstrap.min.js")"></script>
    <!-- SlimScroll -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/slimScroll/jquery.slimscroll.min.js")"></script>
    <!-- FastClick -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/fastclick/fastclick.js")"></script>
    <!-- AdminLTE App -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/plugins/dist/js/app.min.js")"></script>
</body>
</html>
