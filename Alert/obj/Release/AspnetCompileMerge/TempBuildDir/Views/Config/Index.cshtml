                                    <col class="c@{@i}">
                                }
                            }

                            <tr>
                                <th><input type="checkbox" id="checkAll" autocomplete="off" /></th>
                                <th>No.</th>
                                <th>Config name</th>
                                <th>Config key</th>
                                <th>Config value</th>
                                <th></th>
                            </tr>
                        </table>
                    </div>
                </div>
                <!--end header-->
                <!--body-->
                <div id="data">
                    <div id="gridView">
                        <table id="group" width="100%" cellspacing="0" border="1">
                            @{
                                for (var i = 1; i < 7; i++)
                                {
                                    <col class="c@{@i}">
