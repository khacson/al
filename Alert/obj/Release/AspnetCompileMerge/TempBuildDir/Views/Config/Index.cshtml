                        <button class="button">
                            <i class="fa fa-plus"></i>
                            Add
                        </button>
                    </li>
                    <li id="edit">
                        <button class="button">
                            <i class="fa fa-save"></i>
                            Edit
                        </button>
                    </li>

                </ul>
            </div>
        </div>
        <div class="box-body">
            <!--E Grid View Data-->
            <div id="gridviewData">
                <!--header-->
                <div id="cHeader">
                    <div id="tHeader">
                        <table width="100%" cellspacing="0" border="1" class="table ">
